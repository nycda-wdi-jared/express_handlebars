<link rel="stylesheet" type="text/css" href="./public/css/home.css">
<script src="./public/js/home.js"></script>

<div class="container">
	<h1>Songs - Click on row for lyrics</h1>
	<table id="song-table" class="table table-striped table-hover" style="width: 35%">
	    <thead>
	    	<tr>
				<th>#</th>
				<th>Artist</th>
				<th>Title</th>
			</tr>
		</thead>
		<tbody id="tbody">
			{{#each songs}}
				<tr class="song-row" data-song_name="{{this.title}}">
					<td>{{inc @index}}</td>
					<td>{{this.artist}}</td>
					<td>{{this.title}}
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>